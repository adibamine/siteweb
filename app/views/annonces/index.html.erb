<p id="notice"><%= notice %></p>

<h1>Listing Annonces</h1>

<table>
  <thead>
    <tr>
      <th>Marque</th>
      <th>Modele</th>
      <th>Couleur</th>
      <th>Model year</th>
      <th>Price</th>
      <th>Description</th>
      <th>Carburant</th>
      <th>Boite vitesse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @annonces.each do |annonce| %>
      <tr>
        <td><%= annonce.marque %></td>
        <td><%= annonce.modele %></td>
        <td><%= annonce.couleur %></td>
        <td><%= annonce.model_year %></td>
        <td><%= annonce.price %></td>
        <td><%= annonce.description %></td>
        <td><%= annonce.carburant %></td>
        <td><%= annonce.boite_vitesse %></td>
        <td><%= link_to 'Show', annonce %></td>
        <td><%= link_to 'Edit', edit_annonce_path(annonce) %></td>
        <td><%= link_to 'Destroy', annonce, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

