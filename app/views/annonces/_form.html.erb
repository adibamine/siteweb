<%= form_for(@annonce, :html => {:multipart => true, class: "form-horizontal", role: "form"}) do |f| %>
<%= render 'shared/errors', obj: @annonce %>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :marque %><br>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :marque,class: "form-control",placeholder:"Marque", autofocuse: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :modele %><br>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :modele,class: "form-control",placeholder:"Marque" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">    
            <%= f.label :couleur %><br>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :couleur,class: "form-control",placeholder:"Marque" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">    
            <%= f.label :model_year %><br>
          </div>
          <div class="col-sm-6">
            <%= f.number_field :model_year,class: "form-control",placeholder:"Marque" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">    
            <%= f.label :price %><br>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :price,class: "form-control",placeholder:"Prix" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">    
            <%= f.label :description %><br>
          </div>
          <div class="col-sm-6">
            <%= f.text_area :description,class: "form-control",placeholder:"description" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">    
            <%= f.label :carburant %><br>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :carburant,class: "form-control",placeholder:"Carburant" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">    
            <%= f.label :boite_vitesse %><br>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :boite_vitesse,class: "form-control",placeholder:"Boite de vitesse" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2"> 
            <%= f.label :imgs %><br>
          </div>
          <div class="col-sm-6">
          <%= f.file_field :imgs, multiple: true,class: "form-control" %>
        </div>
      </div>
        <div class="form-group">
          <div class="control-label col-sm-6"> 
            <%= f.submit class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
    <% end %>