<%= form_for(@user, :html => {class: "form-horizontal",role: "form"}) do |f| %>
<%= render 'shared/errors', obj: @user %>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :firstName %><br>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :firstName,class: "form-control",placeholder:"Prenom", autofocuse: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :lastName %><br>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :lastName,class: "form-control",placeholder:"Nom" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">    
            <%= f.label :email %><br>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :email,class: "form-control",placeholder:"Email" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">    
            <%= f.label :password %><br>
          </div>
          <div class="col-sm-6">
            <%= f.password_field :password,class: "form-control",placeholder:"Password" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-6"> 
            <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: 'btn btn-primary btn-lg') %>
          </div>
        </div>
    <% end %>